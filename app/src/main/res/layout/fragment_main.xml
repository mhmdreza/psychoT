<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rootLayout"
    android:background="@drawable/item_background_general"
    tools:context=".views.MainFragment">

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="@dimen/toolbar_height" >

        <ImageView
            android:id="@+id/infoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="10dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_info"
            android:layout_gravity="center_vertical|start"/>

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/musicButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="9dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_pause_circle_outline_black_24"
            android:layout_gravity="center_vertical|end"/>


    </FrameLayout>


    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_gravity="center"
        android:background="@drawable/item_bubble_purple"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="20dp"
        android:text="@string/main_description"
        android:textSize="14sp" />

    <FrameLayout
            android:id="@+id/quizListLayout"
            android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
            android:background="@drawable/quiz_background">

            <View
                android:layout_width="84dp"
                android:layout_height="48dp"
                android:layout_gravity="start|top"
                android:layout_marginStart="38dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/item_card_dots" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_question_mark_white_48" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="100dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:text="آزمون‌ها"
                    android:textColor="@android:color/white"
                    android:gravity="center_vertical|end"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical|end"
                    android:text="لیست آزمون‌ها"
                    android:textColor="@color/semitrans"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="16dp"
                android:tint="@android:color/white"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_back" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/resultListLayout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/result_background">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_pie_chart_white_48" />

        <View
            android:layout_width="84dp"
            android:layout_height="48dp"
            android:layout_gravity="start|top"
            android:layout_marginStart="38dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/item_card_dots" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="100dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="نتایج آزمون‌ها"
                android:gravity="center_vertical|end"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical|end"
                android:text="لیست نتایج پیشین"
                android:textColor="@color/semitrans"
                android:textSize="12sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:tint="@android:color/white"
            android:src="@drawable/ic_back" />
    </FrameLayout>

<!--    <TextView-->
<!--        android:id="@+id/payment"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="payment"/>-->

</LinearLayout>